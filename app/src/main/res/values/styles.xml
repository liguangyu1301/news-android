<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--//<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/white</item>
    </style>
    <!--我的item布局-->
    <style name="MeItemLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--我的item文字样式-->
    <style name="MeItemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
