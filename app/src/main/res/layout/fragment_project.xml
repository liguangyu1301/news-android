<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="新闻频道"
        android:background="@color/white"
        android:textSize="@dimen/sp_16"
        android:textColor="#FF003A"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_divider"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_divider_color="#1AFFFFFF"
        tl:tl_divider_padding="13dp"
        tl:tl_divider_width="0dp"
        tl:tl_indicator_color="#FF003A"
        tl:tl_indicator_height="3.3dp"
        tl:tl_indicator_margin_left="13dp"
        tl:tl_indicator_margin_right="13dp"
        tl:tl_indicator_width_equal_title="false"
        tl:tl_tab_padding="22dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="#333333"
        tl:tl_textUnselectColor="#9FA9B0"
        tl:tl_underline_color="@color/white"
        tl:tl_underline_height="1dp" />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>