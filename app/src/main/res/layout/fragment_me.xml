<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/fm_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="#FFFF003A"
        android:text="我的"
        android:textSize="@dimen/sp_16" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!--顶部个人信息   -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="14dp"
                android:paddingBottom="19dp"
                android:paddingRight="25dp">

                <ImageView
                    android:id="@+id/cir_headpics"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/female"/>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/cir_headpics">

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#010205"
                        android:textSize="21sp"
                        android:text="顾大尧" />

                    <TextView
                        android:id="@+id/tv_one_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:text="43岁" />

                    <TextView
                        android:id="@+id/tv_two_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:visibility="gone"
                        android:text="认证" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/linear"
                    android:layout_below="@+id/linear"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/cir_headpics"
                    android:textColor="#757882"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:text="健健康康比什么都好，希望这边更美，知足常乐~" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_divider"/>
            <!--个人资料-->
            <LinearLayout
                android:id="@+id/ll_personal"
                style="@style/MeItemLinearLayoutStyle">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#FFFF003A"/>
                <TextView
                    style="@style/MeItemTextViewStyle"
                    android:text="个人资料"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_divider"/>
            <!--我的报告单-->
            <LinearLayout
                android:id="@+id/ll_report"
                style="@style/MeItemLinearLayoutStyle">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#FF08BA28"/>
                <TextView
                    style="@style/MeItemTextViewStyle"
                    android:text="我的收藏"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_divider"/>
            <!--我的排名-->
            <LinearLayout
                android:id="@+id/ll_ranking"
                style="@style/MeItemLinearLayoutStyle">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#FF1E79E4"/>
                <TextView
                    style="@style/MeItemTextViewStyle"
                    android:text="浏览记录"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@color/bg_divider"/>
            <!--安全与隐私-->
            <LinearLayout
                android:id="@+id/ll_safe"
                android:visibility="gone"
                style="@style/MeItemLinearLayoutStyle">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#FFAB23F5"/>
                <TextView
                    style="@style/MeItemTextViewStyle"
                    android:text="安全与隐私"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_divider"/>
            <!--版本-->
            <LinearLayout
                android:id="@+id/ll_version"
                style="@style/MeItemLinearLayoutStyle">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#FF4E4E4E"/>
                <TextView
                    style="@style/MeItemTextViewStyle"
                    android:text="版本"/>
                <TextView
                    android:id="@+id/tv_version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginRight="5dp"
                    android:text="v1.0.1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_divider"/>
            <LinearLayout
                android:id="@+id/ll_about"
                style="@style/MeItemLinearLayoutStyle">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="#FFD8D8D8"/>
                <TextView
                    style="@style/MeItemTextViewStyle"
                    android:text="关于"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_divider"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>